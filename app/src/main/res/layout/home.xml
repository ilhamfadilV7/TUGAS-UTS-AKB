<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar"
        android:layout_marginTop="14dp"
        android:text="Nama : Ilham Fadil Azmi"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txtnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnama"
        android:layout_marginTop="12dp"
        android:text="Nim :    10116906"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txtkelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnim"
        android:layout_marginTop="12dp"
        android:text="Kelas :  IF-14-K"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtkelas"
        android:layout_marginTop="12dp"
        android:text="Email : ilhamfadil@mahasiswa.unikom.ac.id"
        android:textSize="18sp"
        android:typeface="serif" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/gambar"
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:src="@drawable/foto"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        />



</RelativeLayout>